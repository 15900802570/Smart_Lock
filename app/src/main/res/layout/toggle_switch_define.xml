<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y81dp"
    android:id="@+id/rl_toggle_switch"
    android:gravity="center"
    android:layout_margin="@dimen/y5dp"
    android:background="@drawable/selector_button_radius_10">

    <TextView
        android:id="@+id/tv_switch_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x25dp"
        android:textColor="#ff000000"
        android:textSize="@dimen/d17sp" />

    <ToggleButton
        android:id="@+id/iv_switch_light"
        android:layout_width="@dimen/x78dp"
        android:layout_height="@dimen/y41dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x10dp"
        android:layout_marginBottom="0.0dip"
        android:background="@null"
        android:button="@drawable/toggle_button_selector"
        android:checked="false"
        android:textOff=""
        android:textOn="" />


</RelativeLayout>