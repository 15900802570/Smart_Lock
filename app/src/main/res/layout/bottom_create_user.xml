<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x15dp"
    android:paddingRight="@dimen/x15dp"
    android:paddingBottom="@dimen/y25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_corners_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15dp"
        android:paddingRight="@dimen/x15dp">

        <TextView
            android:id="@+id/create_admin_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80dp"
            android:gravity="center"
            android:paddingTop="@dimen/y15dp"
            android:paddingBottom="@dimen/y15dp"
            android:text="@string/administrator"
            android:textColor="@color/black_de"
            android:textSize="@dimen/d18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dip"
            android:background="@color/line" />


        <TextView
            android:id="@+id/create_members_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80dp"
            android:gravity="center"
            android:paddingTop="@dimen/y15dp"
            android:paddingBottom="@dimen/y15dp"
            android:text="@string/members"
            android:textColor="@color/black_de"
            android:textSize="@dimen/d18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10dp"
        android:background="@drawable/box_corners_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15dp"
        android:paddingRight="@dimen/x15dp">


        <TextView
            android:id="@+id/create_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80dp"
            android:gravity="center"
            android:paddingTop="@dimen/y15dp"
            android:paddingBottom="@dimen/y15dp"
            android:text="@string/cancel"
            android:textColor="@color/black_de"
            android:textSize="@dimen/d18sp" />

    </LinearLayout>
</LinearLayout>
