<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@mipmap/dialog_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_ico"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="7dip"
            android:paddingTop="7dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/friend_tip_title"
            android:textColor="@color/white"
            android:textSize="18dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dialog_mid"
        android:minHeight="100dip">

        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="10dip"
            android:gravity="left"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:textColor="@color/blue"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@mipmap/dialog_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <com.smart.lock.widget.RedButton
            android:id="@+id/dialog_bt_ok"
            style="@style/RedButton"
            android:layout_width="@dimen/button_width_value"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18dip" />

        <com.smart.lock.widget.RedButton
            android:id="@+id/dialog_bt_no"
            style="@style/RedButton"
            android:layout_width="@dimen/button_width_value"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="18dip"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>