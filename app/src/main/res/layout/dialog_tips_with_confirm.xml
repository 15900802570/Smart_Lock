<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_tips_with_confirm_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x19dp"
    android:paddingRight="@dimen/x19dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x78dp"
            android:gravity="center"
            android:background="@drawable/box_corners_dialog_title_radius_13"
            android:text="@string/friend_tip_title"
            android:textColor="@color/white"
            android:textSize="@dimen/d22sp" />

        <TextView
            android:id="@+id/tips_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x115dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingRight="@dimen/x34dp"
            android:paddingLeft="@dimen/x34dp"
            android:text="@string/tips"
            android:textSize="@dimen/d19sp" />

        <!--<Button-->
            <!--android:id="@+id/dialog_cancel_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/selector_button"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/cancel" />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y82dp"
        android:background="@drawable/box_corners_dialog_btn_radius_13"
        android:paddingLeft="@dimen/x34dp"
        android:paddingRight="@dimen/x34dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y61dp"
            android:background="@drawable/selector_button_dialog_confirm"
            android:gravity="center"
            android:onClick="tipsOnClick"
            android:text="@string/confirm"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
