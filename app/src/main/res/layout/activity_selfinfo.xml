<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <ImageView
            android:id="@+id/iv_back_selfinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="10.0dip"
            android:src="@mipmap/btn_back" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="个人信息"
            android:textColor="#ff000000"
            android:textSize="18.0dip" />
    </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="#ffffffff" >

            <TextView
                android:id="@+id/tv_head_define"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="18.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="18.0dip"
                android:gravity="center"
                android:text="头像"
                android:textColor="#ff000000"
                android:textSize="16.0dip" />

            <ImageView
                android:id="@+id/iv_right_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dip"
                android:src="@mipmap/icon_arrow_45_45" />

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@+id/iv_right_click"
                android:gravity="center_vertical"
                android:src="@mipmap/head_photo"
                android:text="无名字"
                android:textColor="#ff999999"
                android:textSize="12.0dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_below="@+id/tv_head_define"
                android:background="#30000000" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_name_self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/tv_name_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_right_click1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@mipmap/icon_arrow_45_45" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@+id/iv_right_click1"
            android:gravity="center_vertical"
            android:text="无名字"
            android:textColor="#ff999999"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/tv_name_define"
            android:background="#30000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phnum_self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/tv_phnum_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:gravity="center"
            android:text="手机号"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_right_click2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@mipmap/icon_arrow_45_45" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@+id/iv_right_click2"
            android:gravity="center_vertical"
            android:text="12345678901"
            android:textColor="#ff999999"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/tv_phnum_define"
            android:background="#30000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sex_self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/tv_sex_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:gravity="center"
            android:text="性别"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_right_click3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@mipmap/icon_arrow_45_45" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@+id/iv_right_click3"
            android:gravity="center_vertical"
            android:text="男"
            android:textColor="#ff999999"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/tv_sex_define"
            android:background="#30000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_birthday_self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/tv_birthday_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:gravity="center"
            android:text="生日"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_right_click4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@mipmap/icon_arrow_45_45" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@+id/iv_right_click4"
            android:gravity="center_vertical"
            android:text="1978-9-21"
            android:textColor="#ff999999"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/tv_birthday_define"
            android:background="#30000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address_self"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/tv_address_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:gravity="center"
            android:text="住址设置"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_right_click5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:src="@mipmap/icon_arrow_45_45" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:layout_toLeftOf="@+id/iv_right_click5"
            android:gravity="center_vertical"
            android:text="未设置"
            android:textColor="#ff999999"
            android:textSize="12.0dip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/tv_address_define"
            android:background="#30000000" />
    </RelativeLayout>

</LinearLayout>