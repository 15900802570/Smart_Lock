<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_temp_user_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y81dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ActionBar"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/d23sp" />
    </android.support.v7.widget.Toolbar>

    <!--<View-->
    <!--android:id="@+id/line"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="@color/gray2" />-->

    <LinearLayout
        android:id="@+id/ll_modify_memo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x35dp"
        android:layout_marginTop="@dimen/y61dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/note_name"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <EditText
            android:id="@+id/et_memo"
            android:layout_width="@dimen/x203dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x12dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:paddingStart="@dimen/x13dp"
            android:text="@string/tmp_user"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x35dp"
        android:layout_marginTop="@dimen/y42dp"
        android:text="@string/set_user_validity_period"
        android:textColor="@color/black"
        android:textSize="@dimen/d20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x33dp"
        android:layout_marginTop="@dimen/y23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="@dimen/x200dp"
            android:layout_height="match_parent"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="2019-03-14"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20dp"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="@dimen/x200dp"
            android:layout_height="match_parent"
            android:background="@drawable/box_corners_white"
            android:layout_marginStart="@dimen/x20dp"
            android:gravity="center"
            android:text="2019-03-15"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y66dp"
        android:layout_marginLeft="@dimen/x32dp"
        android:layout_marginTop="@dimen/y64dp"
        android:layout_marginRight="@dimen/x32dp"
        android:background="@drawable/selector_btn"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/d20sp" />


</LinearLayout>
