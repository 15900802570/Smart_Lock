<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:minHeight="?android:attr/actionBarSize">  <!-- 最小高度 -->

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/lock_manager" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_add_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/news_fl"
            android:layout_width="fill_parent"
            android:layout_height="360dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/news_vp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_below="@+id/news_vp"
                android:layout_gravity="bottom"
                android:layout_marginTop="-70dp"
                android:alpha="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/dot_0"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/dot_1"
                        android:layout_width="10dip"
                        android:layout_height="10dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/dot_focused" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/news_fl"
            android:layout_marginTop="-40dp"
            android:background="@drawable/box_corners_homepage"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="45dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@mipmap/icon_saoyisao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/scan_qr"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:fontFamily=""/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:textColor="#5A5A5A"
                    android:text="@string/input_code_of_tag_or_scan_qr" />

                <Button
                    android:id="@+id/btn_add_lock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:background="@drawable/box_corners_blue_10"
                    android:text="@string/add_lock" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_lock_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:layout_marginTop="1.0dip"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:text="@string/bt_state"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:text="@string/bt_unconnected"
                    android:textColor="@color/red"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/tv_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="11.0dip"
                    android:gravity="center"
                    android:text="@string/bt_reconnect"
                    android:textColor="@color/blue2"
                    android:textSize="12.0dip" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5.0dip"
                android:layout_marginBottom="5.0dip"
                app:cardCornerRadius="4.0dip"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_lock_name"
                            android:layout_width="wrap_content"
                            android:layout_height="20.0dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="门锁名称1"
                            android:textColor="#ff5f646e"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/bt_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="11.0dip"
                            android:text="@string/bt_setting"
                            android:textColor="@color/blue2"
                            android:textSize="14.0sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_electric_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:background="@mipmap/ic_battery_100" />

                        <TextView
                            android:id="@+id/tv_electric_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/iv_electric_quantity"
                            android:text="100%"
                            android:textColor="#ff5f646e"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/tv_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@id/tv_update_time"
                            android:text="更新于："
                            android:textColor="@color/red"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/tv_update_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="02-13 19:52"
                            android:textColor="@color/red"
                            android:textSize="14.0sp" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.smart.lock.widget.MyGridView
                android:id="@+id/gv_lock"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="18.0dip"
                android:layout_marginBottom="31dp"
                android:background="@color/white"
                android:gravity="center"
                android:numColumns="2"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1.0dip"
                app:cardCornerRadius="4.0dip" />

            <!--  <FrameLayout
                  android:id="@+id/fl_instruction"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/mask"
                  android:visibility="gone">

                  <Button
                      android:id="@+id/btn_instruction"
                      style="@style/RountButtonStyle"
                      android:layout_width="140dp"
                      android:layout_height="50dp"
                      android:layout_gravity="center_horizontal"
                      android:text="@string/ble_instruction"
                      android:visibility="visible" />
              </FrameLayout>-->

            <FrameLayout
                android:id="@+id/fl_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-31dp"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:id="@+id/one_click_unlock_ib"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/btn_oneclickunlock" />

            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>