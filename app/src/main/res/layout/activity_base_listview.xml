<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bg_height"
        android:background="#ffffffff">

        <ImageView
            android:id="@+id/iv_back_sysset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/title_back_margin_left"
            android:src="@mipmap/btn_back" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/device_manager"
            android:textColor="#000000"
            android:textSize="@dimen/title_msg_size" />

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/edit_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="#ff000000"
            android:textSize="@dimen/title_msg_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@color/event_bg"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list_view_bg_grey"
            android:divider="@null"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rl_select_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/delete_bg_height"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/delete_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/checkbox_delete_left"
                android:background="@drawable/selector_delete_checkbox"
                android:button="@null"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/edit_right"
                android:layout_toEndOf="@+id/delete_locked"
                android:text="@string/all_election"
                android:textColor="#ff555555"
                android:textSize="@dimen/checkbox_delete_msg_size" />

            <TextView
                android:id="@+id/del_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/delete_btn_end"
                android:background="@mipmap/delete"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="#ffbd9744"
                android:textSize="@dimen/checkbox_delete_msg_size" />

        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>
