<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y81dp"
        android:background="#ffffffff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingStart="@dimen/x30dp"
            android:paddingEnd="@dimen/x30dp"
            android:background="@drawable/selector_normal"
            android:src="@mipmap/btn_back"/>

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="阈值查询"
            android:textColor="#ff000000"
            android:textSize="@dimen/d18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_title"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x32dp"
            android:layout_marginTop="@dimen/y32dp"
            android:layout_marginRight="@dimen/x32dp"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content"
            android:layout_marginBottom="@dimen/y10dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="@dimen/y66dp"
                android:layout_marginLeft="@dimen/x32dp"
                android:layout_marginTop="@dimen/y64dp"
                android:layout_marginRight="@dimen/x32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn"
                android:text="清空"
                android:textColor="@color/white"
                android:textSize="@dimen/d20sp" />

            <Button
                android:id="@+id/btn_query"
                android:layout_width="0dp"
                android:layout_height="@dimen/y66dp"
                android:layout_marginLeft="@dimen/x32dp"
                android:layout_marginTop="@dimen/y64dp"
                android:layout_marginRight="@dimen/x32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="@dimen/d20sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>