<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_events_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y81dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ActionBar"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/tv_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF000000"
            android:textSize="@dimen/d23sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/line_events"
        android:layout_width="match_parent"
        android:layout_below="@id/tb_events_set"
        android:layout_height="0.5dp"
        android:background="#FFEEEEEE"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_events_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70dp"
        android:layout_below="@id/line_events"
        style="@style/TabLayout"
        app:tabSelectedTextColor="@color/yellow_selete">
    </android.support.design.widget.TabLayout>

    <com.smart.lock.widget.NoScrollViewPager
        android:layout_below="@id/tl_events_manager"
        android:id="@+id/vp_events_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.smart.lock.widget.NoScrollViewPager>

    <RelativeLayout
        android:id="@+id/rl_select_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/delete_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x59dp"
            android:background="@drawable/selector_delete_checkbox"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x33dp"
            android:layout_toEndOf="@+id/delete_locked"
            android:text="@string/all_election"
            android:textColor="#ff555555"
            android:textSize="@dimen/checkbox_delete_msg_size" />

        <TextView
            android:id="@+id/del_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/y174dp"
            android:background="@mipmap/delete"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#ffbd9744"
            android:textSize="@dimen/checkbox_delete_msg_size" />

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/y32dp"
            android:background="@mipmap/delete"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/edit_back"
            android:textColor="#ffbd9744"
            android:textSize="@dimen/checkbox_delete_msg_size" />


    </RelativeLayout>

</RelativeLayout>
