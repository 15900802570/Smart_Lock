<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll_event"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    app:clickToClose="true"
    app:drag_edge="right">

    <include layout="@layout/layout_swipe_item_hiden" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="1.0dip"
            app:cardPreventCornerOverlap="false">


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/delete_locked"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_delete_checkbox"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="visible" />

                    <View
                        style="@style/LineVertical"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_toRightOf="@+id/delete_locked" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15.0dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="100dp"
                            android:layout_height="30.0dip"
                            android:textColor="@color/color_text"
                            android:textSize="12.0sp" />

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="match_parent"
                            android:layout_height="30.0dip"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@+id/tv_type"
                            android:gravity="right"
                            android:textColor="@color/color_text" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_event_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_text"
                        android:textSize="13.0sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>