<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="@string/system_setting"
            android:textColor="#ff000000"
            android:textSize="18.0dip" />

        <ImageView
            android:id="@+id/system_set_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_arrow_blue_left"
            android:padding="10.0dip" />
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <com.smart.lock.widget.NextActivityDefineView
                android:id="@+id/system_set_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:visibility="visible" />

            <com.smart.lock.widget.ToggleSwitchDefineView
                android:id="@+id/system_set_switch_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick" />

            <com.smart.lock.widget.ToggleSwitchDefineView
                android:id="@+id/system_set_switch_fingerprint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick" />

            <com.smart.lock.widget.ToggleSwitchDefineView
                android:id="@+id/tw_open_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick" />

            <com.smart.lock.widget.NextActivityDefineView
                android:id="@+id/next_check_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>