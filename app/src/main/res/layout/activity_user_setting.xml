<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_temp_user_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y81dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.ActionBar"
        app:popupTheme="@style/ToolbarPopupTheme">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/d23sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFEEEEEE" />

    <LinearLayout
        android:id="@+id/ll_modify_memo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y51dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/note_name"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <EditText
            android:id="@+id/et_memo"
            android:layout_width="@dimen/x203dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x12dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center_vertical"
            android:maxLength="8"
            android:paddingStart="@dimen/x11dp"
            android:text="@string/tmp_user"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y42dp"
        android:text="@string/set_user_validity_period"
        android:textColor="@color/black"
        android:textSize="@dimen/d20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/selector_delete_checkbox"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="@dimen/x190dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x5dp"
            android:text="@string/_1970_01_01"
            android:textColor="#FF555555"
            android:textSize="@dimen/d16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10dp"
            android:layout_marginEnd="@dimen/x10dp"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="@dimen/d16sp" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="@dimen/x190dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x5dp"
            android:text="@string/_1970_01_01"
            android:textColor="#FF555555"
            android:textSize="@dimen/d16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_unlock_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y42dp"
        android:text="@string/set_unlock_time"
        android:textColor="@color/black"
        android:textSize="@dimen/d20sp" />

    <LinearLayout
        android:id="@+id/ll_unlock_time1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y39dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_unlock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/selector_delete_checkbox"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="08:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x14dp"
            android:layout_marginEnd="@dimen/x14dp"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="09:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_unlock_time2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y39dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_unlock_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/selector_delete_checkbox"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_start_time2"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="11:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x14dp"
            android:layout_marginEnd="@dimen/x14dp"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_end_time2"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="12:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_unlock_time3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y45dp"
        android:layout_marginStart="@dimen/x27dp"
        android:layout_marginTop="@dimen/y39dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_unlock_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"
            android:background="@drawable/selector_delete_checkbox"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_start_time3"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="17:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x14dp"
            android:layout_marginEnd="@dimen/x14dp"
            android:text="@string/to"
            android:textColor="@color/black"
            android:textSize="@dimen/d20sp" />

        <TextView
            android:id="@+id/tv_end_time3"
            android:layout_width="@dimen/x160dp"
            android:layout_height="@dimen/y45dp"
            android:background="@drawable/box_corners_white"
            android:gravity="center"
            android:text="18:00"
            android:textColor="#FF555555"
            android:textSize="@dimen/d20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y66dp"
        android:layout_marginLeft="@dimen/x32dp"
        android:layout_marginTop="@dimen/y64dp"
        android:layout_marginRight="@dimen/x32dp"
        android:background="@drawable/selector_btn"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/d20sp" />


</LinearLayout>
