<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:minHeight="?android:attr/actionBarSize">  <!-- 最小高度 -->

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/me" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white">

                <com.smart.lock.widget.CircleImageView
                    android:id="@+id/me_center_head_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@mipmap/cat"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingLeft="30dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/me_center_head_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textSize="24.0sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="25dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13560312766"
                            android:textSize="18.0sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_next_activity"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

            <com.smart.lock.widget.MeDefineView
                android:id="@+id/mv_scan_qr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.smart.lock.widget.MeDefineView
                android:id="@+id/self_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.smart.lock.widget.MeDefineView
                android:id="@+id/mc_manage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.smart.lock.widget.MeDefineView
                android:id="@+id/sent_repair"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <com.smart.lock.widget.MeDefineView
                android:id="@+id/system_set"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>