<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll_dev"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    app:clickToClose="true"
    app:drag_edge="right">

    <include layout="@layout/layout_swipe_item_hiden" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            app:cardCornerRadius="6.0dip"
            app:cardElevation="1.0dip"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/lock" />

                </LinearLayout>

                <View
                    style="@style/LineVertical"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_dev_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="#ff5f646e"
                            android:textSize="17.0sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_id"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.0"
                        android:gravity="top"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dev_mac"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:textColor="#ff002800"
                            android:textSize="13.0sp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>